<section class="login flex justify-center pt-24">
  <div class="w-full max-w-xs">
    <form
      action="/admin/addnewpizza"
      method="POST"
      class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"
    >
      <div class="mb-4">
        <label
          class="block text-gray-700 text-sm font-bold mb-2"
          for="pizzaame"
        >
          Pizza Name
        </label>
        <input
          name="name"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          id="pizzaame"
          type="text"
          placeholder="Enter your Pizza name"
        />
      </div>
      <div class="mb-3">
        <label
          class="block text-gray-700 text-sm font-bold mb-2"
          for="pizzaimage"
        >
          Pizza Image
        </label>
        <input
          name="image"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
          id="password"
          type="file"
          placeholder=""
        />
      </div>
      <div class="mb-3">
        <label
          class="block text-gray-700 text-sm font-bold mb-2"
          for="pizzaprice"
        >
          Pizza Price
        </label>
        <input
          name="price"
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
          id="password"
          type="number"
          placeholder="Enter your Pizza price"
        />
      </div>

      <div class="mb-6">
        <div class="col-span-6 sm:col-span-3">
            <label for="pizzasize" class="block text-gray-700 text-sm font-bold mb-2">Pizza Size</label>
            <select id="size" name="size" autocomplete="small" class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
              <option value="small">Small</option>
              <option value="medium">Medium</option>
              <option value="large">Large</option>
            </select>
          </div>
      </div>

      <div class="flex items-center justify-center">
        <button
          class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          type="submit"
        >
          Add Pizza
        </button>
      
      </div>
    </form>
    <p class="text-center text-gray-500 text-xs">
      &copy;2020 PM Developers. All rights reserved.
    </p>
  </div>
</section>
